const string	group_macd			=	"- MACD -"
var int			i_macd_fast			=	input.int(	24,		"â±Fast",					inline = "macd", group = group_macd, display = display.none)
var int			i_macd_slow			=	input.int(	52,		"â˜•Slow",					inline = "macd", group = group_macd, display = display.none)
